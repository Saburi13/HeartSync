<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_login_glass">

    <!-- Top hero gradient area -->
    <FrameLayout
        android:id="@+id/heroHeader"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/bg_login_hero">

        <!-- Optional logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_user_24"
            app:tint="#FFFFFFFF"
            android:contentDescription="@null"/>

        <!-- Headline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/loginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Again!"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/loginSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Welcome back, you’ve been missed!"
                android:textSize="14sp"
                android:textColor="#E6FFFFFF"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Curved white form sheet that overlaps the hero -->
    <LinearLayout
        android:id="@+id/formSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:orientation="vertical"
        android:background="@drawable/bg_form_sheet"
        android:padding="20dp">

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_input_pill"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="#8A9194"
                android:src="@drawable/ic_user_24"
                android:contentDescription="@null"/>

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:hint="Enter Username"
                android:textColor="#2A2E2F"
                android:textColorHint="#9AA1A4"
                android:inputType="textEmailAddress"
                android:padding="0dp"/>
        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input_pill"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="6dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="#8A9194"
                android:src="@drawable/ic_lock_24"
                android:contentDescription="@null"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:textColor="#2A2E2F"
                android:textColorHint="#9AA1A4"
                android:inputType="textPassword"
                android:padding="0dp"/>

            <ImageButton
                android:id="@+id/btnTogglePassword"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Toggle password visibility"
                app:tint="#8A9194"
                android:src="@drawable/ic_eye_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="Forgot Password?"
            android:textSize="12sp"
            android:textColor="#6B7376"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="14dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="#050505"
            app:backgroundTint="#AEEF6D"
            app:cornerRadius="28dp"/>

        <!-- Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E1E4E6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or continue with"
                android:textColor="#8A9194"
                android:textSize="12sp"
                android:paddingHorizontal="8dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E1E4E6"/>
        </LinearLayout>

        <!-- Socials -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <ImageButton
                android:id="@+id/btnGoogle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_social_pill"
                android:contentDescription="Continue with Google"
                android:src="@drawable/ic_google_placeholder"/>

            <View android:layout_width="10dp" android:layout_height="1dp"/>

            <ImageButton
                android:id="@+id/btnApple"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_social_pill"
                android:contentDescription="Continue with Apple"
                android:src="@drawable/ic_apple_placeholder"/>

            <View android:layout_width="10dp" android:layout_height="1dp"/>

            <ImageButton
                android:id="@+id/btnFacebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_social_pill"
                android:contentDescription="Continue with Facebook"
                android:src="@drawable/ic_facebook_placeholder"/>
        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don’t have an account? "
                android:textSize="12sp"
                android:textColor="#6B7376"/>

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Now"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#1E8E5A"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>